#include<iostream>
using namespace std;
int main()
{
    int t, n, i, odds, evens;
    cin >> t;
    while(t--)
    {
        odds=0;
        evens=0;
        cin >> n;
        long a[n];
        for(i=0;i<n;i++)
        {
            cin >> a[i];
            if(a[i]%2==0)
            evens++;
            else
            odds++;
        }
        evens>odds?cout<<odds<<endl:cout<<evens<<endl;
    }
    return 0;
}
